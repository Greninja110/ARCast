<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Stream Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stream_status_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title_stream_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stream Status"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/status_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inactive"
                    app:chipBackgroundColor="@drawable/rounded_status_paused"
                    app:layout_constraintTop_toTopOf="@id/title_stream_status"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/label_ip_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IP Address:"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/title_stream_status"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/text_ip_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Not connected"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/label_ip_address"
                    app:layout_constraintStart_toEndOf="@id/label_ip_address"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/label_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stream URL:"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/label_ip_address"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/text_url"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Not available"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/label_url"
                    app:layout_constraintStart_toEndOf="@id/label_url"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/label_connected_clients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connected Clients:"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/label_url"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/text_connected_clients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/label_connected_clients"
                    app:layout_constraintStart_toEndOf="@id/label_connected_clients" />

                <Button
                    android:id="@+id/button_copy_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copy URL"
                    android:layout_marginTop="16dp"
                    app:icon="@android:drawable/ic_menu_share"
                    app:layout_constraintTop_toBottomOf="@id/label_connected_clients"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Image Mode Controls -->
        <LinearLayout
            android:id="@+id/container_image_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Image Controls"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap the camera button to take a picture and send it to connected clients"
                        android:layout_marginBottom="16dp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_take_picture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_camera_capture"/>
                    </FrameLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Video Mode Controls -->
        <LinearLayout
            android:id="@+id/container_video_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Video Controls"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/button_switch_camera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Switch Camera"
                        android:layout_marginBottom="8dp"/>

                    <Button
                        android:id="@+id/button_toggle_flash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toggle Flash"
                        android:layout_marginBottom="8dp"/>

                    <Button
                        android:id="@+id/button_toggle_focus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toggle Auto Focus"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Audio Mode Controls -->
        <LinearLayout
            android:id="@+id/container_audio_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Audio Controls"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/button_toggle_mute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toggle Mute"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Audio Volume"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"/>

                    <SeekBar
                        android:id="@+id/seek_audio_volume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="80"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Stream Control Button -->
        <Button
            android:id="@+id/button_start_stream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Streaming"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/rounded_status_tracking"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>