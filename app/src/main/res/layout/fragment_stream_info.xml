<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".streaming.StreamInfoFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/stream_status_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/title_stream_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stream Status"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.chip.Chip
                android:id="@+id/status_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inactive"
                app:chipBackgroundColor="#DDDDDD"
                app:layout_constraintTop_toTopOf="@id/title_stream_status"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_ip_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP Address:"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/title_stream_status"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_ip_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Not connected"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/label_ip_address"
                app:layout_constraintStart_toEndOf="@id/label_ip_address"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stream URL:"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/label_ip_address"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Not available"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/label_url"
                app:layout_constraintStart_toEndOf="@id/label_url"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_connected_clients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected Clients:"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/label_url"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/text_connected_clients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/label_connected_clients"
                app:layout_constraintStart_toEndOf="@id/label_connected_clients" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_copy_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy URL"
                android:layout_marginTop="16dp"
                app:icon="@android:drawable/ic_menu_share"
                app:layout_constraintTop_toBottomOf="@id/label_connected_clients"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/stream_control_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/stream_status_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/title_stream_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stream Controls"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_start_stream"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Start Streaming"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/title_stream_control"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_video_resolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Resolution:"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/button_start_stream"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spinner_video_resolution"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/label_video_resolution"
                app:layout_constraintStart_toEndOf="@id/label_video_resolution"
                app:layout_constraintEnd_toEndOf="parent" />

            <CheckBox
                android:id="@+id/checkbox_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable Audio"
                android:checked="true"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/spinner_video_resolution"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>